<div class=" cardee p-0 mt-5 ml-0">
  <h1 class="container">Our cocktails</h1>
  <% count = 0 %>
  <% @cocktails.each do |cocktail| %>
  <% count += 1 %>

  <div class="carde ">
    <% if count % 2 == 0 %>
    <div class="cards">
    <% end %>
      <div data-aos="fade-up" class="card mb-5" style="width: 18rem">
        <%= cl_image_tag cocktail.photo, crop: :fill, class: ' card-img-top' %>
        <h2 class='card-title text-center'><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
        <h2 class="card-text text-center mb-4"><%= link_to "Delete", cocktail_path(cocktail), method: :delete,
        data: { confirm: "Are you sure you want to delete this task?" } %></h2>
      </div>
    </div>
    <% end %>
  </div>
</div>

