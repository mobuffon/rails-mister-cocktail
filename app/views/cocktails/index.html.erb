<div class="p-0 mt-3 ml-0">
<h1>Our cocktails</h1>
<% @cocktails.each do |cocktail| %>
<div class="border-bottom">
<h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
<h2><%= link_to "Delete", cocktail_path(cocktail), method: :delete,
    data: { confirm: "Are you sure you want to delete this task?" } %></h2>
</div>
<% end %>
</div>
