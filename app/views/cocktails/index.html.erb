<div class=" cardee p-0 mt-5 ml-0">
  <h1 class=>Our cocktails</h1>
  <% count = 0 %>
  <% @cocktails.each do |cocktail| %>
  <% count += 1 %>
    <div data-aos="fade-in" class="hans rounded border-bottom d-flex align-middle m-20 ">
      <%= cl_image_tag cocktail.photo, height: 90, width: 90, crop: :fill, class: 'rounded-circle ' %>
      <h2 class='flex-grow-1 ml-4 align-self-center'><%= link_to cocktail.name, cocktail_path(cocktail)%></h2>
      <h2 class="align-self-center"><%= link_to "Delete", cocktail_path(cocktail), method: :delete,
      data: { confirm: "Are you sure you want to delete this task?" } %></h2>
    </div>
  <% end %>
</div>

